<!DOCTYPE html>
<html>
	<h1>Посты</h1>

	<% @posts.each do |post| %>
		<div class="card mb-4">
		  <div class="card-body">
				<h2 class="card-title"><%= link_to post.title, post_path(post) %></h2>
		    <p class="card-text"><%= post.body %></p>
		  </div>

			<div class="card-footer">
				<%= post.created_at.to_date.strftime("%d %B, %Y") %>
			</div>
		</div>
	<% end %>
</html>
